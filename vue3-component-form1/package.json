{
  "name": "grd-project-test",
  "version": "0.1.1",
  "private": false,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build:core": "cross-env NODE_ENV=lib vue-cli-service build --target lib --name index --no-clean lib/index.ts",
    "build:theme": "cross-env NODE_ENV=lib vue-cli-service build --target lib --name theme/index --no-clean lib/theme/index.tsx",
    "build": "rimraf dist && npm run build:core && npm run build:theme",
    "prepublishOnly": "npm run build",
    "lint": "vue-cli-service lint"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.common.js",
  "dependencies": {
    "@types/json-schema-merge-allof": "^0.6.0",
    "@types/lodash.union": "^4.6.6",
    "ajv": "^6.12.6",
    "ajv-i18n": "^3.6.0",
    "circular-dependency-plugin": "^5.2.2",
    "core-js": "^3.6.5",
    "cross-env": "^7.0.3",
    "json-schema-merge-allof": "^0.8.1",
    "jsonpointer": "^4.1.0",
    "jss": "^10.5.1",
    "jss-preset-default": "^10.5.1",
    "lodash.topath": "^4.5.2",
    "lodash.union": "^4.6.0",
    "vue": "^3.0.0",
    "vue-jss": "^0.0.4"
  },
  "devDependencies": {
    "@types/lodash.topath": "^4.5.6",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "@vue/babel-plugin-jsx": "^1.0.3",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-typescript": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^5.0.2",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^7.0.0-0",
    "lint-staged": "^9.5.0",
    "monaco-editor": "^0.20.0",
    "monaco-editor-webpack-plugin": "^1.9.1",
    "prettier": "^1.19.1",
    "rimraf": "^2.7.1",
    "typescript": "~3.9.3"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
